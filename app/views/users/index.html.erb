<!DOCTYPE html>
<html class="fontawesome-i2svg-active fontawesome-i2svg-complete">

    <% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
    <p id="notice"></p>
    <div class="container px-5 px-sm-0">
<div class="row">
<%= render 'books/book', book:@book %>
<div class="col-md-8 offset-md-1">
   <h2>users</h2>

  <table class="table table-hover table-invers">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
     </thead>

    <tbody>
      <tr>
        <td>
          <%= link_to users_path(@user) do %>
          <%= image_tag @user.get_profile_image(100,100) %>
          <% end %>
          </td>
        <td><%= @user.name %></td>
        <td><%= link_to "show", user_path(@user), class:"user_40604" %></td>
      </tr>
    </tbody>
  </table>
</div>
</div>
</div>
</html>