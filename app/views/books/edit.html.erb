<!DOCTYPE html>
<p id="notice"></p>
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
             <h1>Editing Book</h1>
            <% if @book.errors.any? %>
            <strong><%= @book.errors.count %>errors prohibited this obj from being saved:</strong>
           <ul>
            <% @book.errors.full_messages.each do |message| %>
           <li><%= message %></li>
           <% end %>
           </ul>
           <% end %>

           <%= form_with model: @book do |book| %>


              <div class="form-group">
                <div class="field_with_errors">
                    <label for="book_title">Title</label>
                </div>

                <div class="field_with_errors">
                  <%= book.text_field :title %>
                </div>
              </div>

              <div class="form-group">
                <div class="field_with_errors">
                  <label for="book_body">Opinion</label>
                </div>

                <div class="field_with_errors">
                  <%= book.text_area :body %>
                </div>
              </div>

              <div class="form-group">


              <%= book.submit 'Update Book', class:"btn btn-success" %>
              </div>
              <% end %>
             <a>
              <%= link_to 'Show', book_path(@book) %>
             </a>
             |
             <a>
              <%= link_to 'Back', books_path %>
             </a>
               </div>
            </div>
        </div>
    </div>
</div>

